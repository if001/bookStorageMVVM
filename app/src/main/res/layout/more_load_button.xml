<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="isLoading" type="boolean" />
        <variable name="callback" type="net.edgwbs.bookstorage.view.MoreLoadButtonCallback"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:elevation="20dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:visibleGone="@{isLoading}">
            <include layout="@layout/progress_loading"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            app:visibleGone="@{!isLoading}"
            android:onClick="@{() ->  callback.onClick()}"
            >
            <net.edgwbs.bookstorage.utils.FontAwesomeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_sync_solid"
                android:textSize="16sp"
                app:solid_icon="true"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>